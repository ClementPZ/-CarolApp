<div class="container_sakura">
    <img src="assets/logo_black.png" >
</div>

<div class="glitch">
    <div class="glitch_title" data-text="colecciones">
    colecciones
    </div>
</div>

<div class="container_collections">
    <div class="collections">
        <% @collections.each do |collection| %>
            <div class="collection" >
                <%= link_to show_collection_path(collection) do %>
                    <p><%= ("#{collection.name} #{collection.season} #{collection.year}")%></p>
                    <%= image_tag collection.picture %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>












